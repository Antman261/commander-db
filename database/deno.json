{
  "tasks": {
    "dev": "deno run --watch main.ts", 
    "start": "deno run --allow-net main.ts"
  },
  "links": ["../protocol", "../simEnv"],
  "imports": {
    "@antman/bool": "jsr:@antman/bool@^0.1.1",
    "@antman/formic-utils": "jsr:@antman/formic-utils@^0.4.0",
    "@antman/lifecycle": "jsr:@antman/lifecycle@^0.4.0",
    "@opentelemetry/api": "npm:@opentelemetry/api@^1.9.0",
    "@std/assert": "jsr:@std/assert@1",
    "@std/async": "jsr:@std/async@^1.0.11",
    "@std/bytes": "jsr:@std/bytes@^1.0.5",
    "@std/cli": "jsr:@std/cli@^1.0.20",
    "@std/encoding": "jsr:@std/encoding@^1.0.7",
    "@std/expect": "jsr:@std/expect@^1.0.13",
    "@std/fs": "jsr:@std/fs@^1.0.19",
    "@std/streams": "jsr:@std/streams@^1.0.9",
    "pure-rand": "npm:pure-rand@^7.0.1"
  },
  "workspace": ["config", "util", "type", "net", "translation", "journal", "disk", "state", "telemetry"],
  "lint": {
    "exclude": ["**/*.md"],
    "rules": {
      "tags": ["recommended"],
      "include": [
        "camelcase",
        "default-param-last",
        "eqeqeq",
        "explicit-module-boundary-types",
        "guard-for-in",
        "no-boolean-literal-for-arguments",
        "no-eval",
        "no-inferrable-types",
        "no-non-null-asserted-optional-chain",
        "no-non-null-assertion",
        "no-self-compare",
        "no-sparse-arrays",
        "no-sync-fn-in-async-fn",
        "no-throw-literal",
        "no-undef",
        "no-useless-rename",
        "prefer-ascii",
        "triple-slash-reference"
      ]
    }
  },
  "fmt": {
    "lineWidth": 110,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "never"
  }
}
